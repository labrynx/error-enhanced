{
	"branches": [
		"main",
		"development"
	],
	"plugins": [
		[
			"@semantic-release/commit-analyzer",
			{
				"preset": "angular",
				"releaseRules": [
					{
						"type": "docs",
						"scope": "README",
						"release": "patch"
					},
					{
						"type": "style",
						"scope": "ui",
						"release": "patch"
					},
					{
						"type": "feat",
						"scope": "app",
						"release": "minor"
					},
					{
						"type": "fix",
						"scope": "app",
						"release": "patch"
					},
					{
						"type": "refactor",
						"scope": "core",
						"release": "minor"
					},
					{
						"type": "test",
						"scope": "test",
						"release": "patch"
					},
					{
						"type": "chore",
						"scope": "deps",
						"release": "patch"
					}
				]
			}
		],
		[
			"@semantic-release/release-notes-generator",
			{
				"preset": "angular",
				"parserOpts": {
					"noteKeywords": [
						"BREAKING CHANGE",
						"BREAKING CHANGES",
						"BREAKING"
					]
				},
				"writerOpts": {
					"commitsSort": [
						"subject",
						"scope"
					]
				}
			}
		],
		[
			"@semantic-release/changelog",
			{
				"changelogFile": "docs/CHANGELOG.md"
			}
		],
		[
			"@semantic-release/npm",
			{
				"npmPublish": false
			}
		],
		[
			"semantic-release-replace-plugin",
			{
				"replacements": [
					{
						"files": [
							"package.json"
						],
						"from": "\"version\": \".*\"",
						"to": "\"version\": \"${nextRelease.version}\"",
						"countMatches": true
					}
				]
			}
		],
		[
			"@semantic-release/git",
			{
				"assets": [
					"./package.json",
					"./docs/CHANGELOG.md"
				],
				"message": "chore: Automated PR - Release ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
			}
		]
	]
}