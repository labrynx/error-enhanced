{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": [
    "<rootDir>"
  ],
  "setupFiles": [
    "<rootDir>/test/jest.setup.ts"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/test/jest.setup.ts"
  ],
  "testMatch": [
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/index\\.ts$"
  ],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.{ts,tsx}",
    "!<rootDir>/**/*.d.ts"
  ],
  "coverageReporters": [
    "json",
    "lcov",
    "text",
    "clover",
    "html"
  ],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1"
  }
}