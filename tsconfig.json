{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "rootDir": "src",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "@shared/*": [
        "./src/lib/shared/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp",
    "test"
  ]
}